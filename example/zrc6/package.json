    "test:local": "PORT=5555 CONTAINER=zrc6_local jest",
    "test": "npm run run:local; npm run test:local; npm run rm:local",
    "format": "npx prettier --write ."
  },
  "dependencies": {
    "@zilliqa-js/zilliqa": "^3.3.0"
  },
  "devDependencies": {
    "jest": "^27.2.4",
    "prettier": "^2.4.1"
  }
}
